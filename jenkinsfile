pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git ''https://github.com/iam-veeramalla/simple-ecommerce-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flipkart-app:1.0 .'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker-compose down'
                sh 'docker-compose up -d'
            }
        }
    }
}
